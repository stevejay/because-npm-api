{
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./src",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", ".webpack", ".serverless"]
}
